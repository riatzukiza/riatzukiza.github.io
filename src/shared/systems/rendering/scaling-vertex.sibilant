(import Andy "../../andy.js")
(import Renderable "./renderable.js")

(define Scaling-vertex Renderable

  (init (layer))

  (def clear ())

  (structure (new Andy.Gl.Type.Composite
                  (lit (point Andy.Type.Vector3)
                       (color Andy.Color.RGBA)
                       (size Andy.Type.float)))))

(export Scaling-vertex)
